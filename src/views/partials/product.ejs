  <div class="font-bold px-3 w-full <%= product.inRotation ? 'outline outline-yellow-200' : 'outline outline-red-500' %>">


    <h3 class="pt-4"><%= product.context.title %></h3>


    <div style="display: flex;">
      <p>SCORE :<%= product.score %></p>
    </div>

    <div style="display: flex;">


    </div>
    <div class="flex">
      <% for (let j =0 ; j < product.context.images.length; j++) { %>
      <% const image = product.context.images[j] %>
      <img src="<%= image.url %>" alt="<%= image.alt %>" class="w-14" />



      <% } %>
    </div>
    <div class="flex gap-3 justify-center">
      <p class=" font-light text-sm py-2">Id: <%= product.info.id %></p>
      <p class=" font-light text-sm py-2">views: <%= product.context.views %></p>
      <p class=" font-light text-sm py-2">clicks: <%= product.context.clicks %></p>
      <p class=" font-light text-sm py-2">ctr: <%= product.context.ctr %></p>
    </div>
    <div class="gap-3 flex flex-col "">

    <div hx-trigger=" click" hx-swap="none" hx-post="/testing/ads/<%= product.info.id %>/logging/?type=view" class="text-xs font-light">
      <label>
        Set Views
        <input class="text-black" value="<%= product.context.clicks %>" type="number" min="0" />
      </label>

    </div>
    <div hx-trigger="click" hx-swap="none" hx-post="/testing/ads/<%= product.info.id %>/logging/?type=view" class="text-xs font-light">
      <label>

        Add Views
        <input class="text-black" value="<%= product.context.views %>" type="number" min="0" />
      </label>

    </div>
  </div>


  <div class="flex justify-around cursor-pointer">
    <div hx-trigger="click" hx-put="/testing/ads/<%= product.info.id %>/logging/?type=view" class="text-xs font-light">
      add view
    </div>
  </div>
  </div>